<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.androidbootcamp.ispy" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddDeleteCameras"
            android:label="@string/title_activity_add_delete_cameras"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".AddDeleteEvents"
            android:label="@string/title_activity_add_delete_events"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".ViewCameras"
            android:label="@string/title_activity_view_cameras"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".ViewEventOutput"
            android:label="@string/title_activity_view_event_output"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>
